{
    "manifest_version": 3,
    "name": "Slide Vox",
    "version": "1.0",
    "description": "Converts chats to PPT slides with a 3D speaking character.",
    "permissions": [
        "activeTab",
        "tabs",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://chatgpt.com/*"],
            "js": ["content.js"],
            "css": ["css/popup.css", "css/viewer.css"],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [{
        "resources": ["button-accessor.js", "*.js"],
        "matches": ["https://chatgpt.com/*"]
    }],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    }
}